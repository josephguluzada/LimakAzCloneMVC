@model List<ShopItem>
@{ int order = 0; }

<div class="content-wrapper pb-0">
    <div class="py-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Shop Items:</h1>
            <a asp-action="create" asp-controller="shop" asp-area="manage" class="btn btn-primary">Create</a>
        </div>
        <table id="example" class="table table-striped table-hover table-bordered " cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Url</th>
                    <th>Category</th>
                    <th>IsFeatured</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ShopItem shopItem in Model)
                {
                    order++;

                <tr>
                    <td>@order</td>
                    <td>@shopItem.RedirectUrl</td>
                    <td>@shopItem.Category.Name</td>
                    <td>@shopItem.IsFeatured</td>
                    <td><img src="~/uploads/shop/@shopItem.Image" style="width:100px;height:60px;border-radius:0px;" /></td>
                    <td>
                        <a asp-action="edit" asp-route-id="@shopItem.Id" class="btn btn-success">Edit</a>
                        <a asp-action="deletefetch" asp-route-id="@shopItem.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>}
            </tbody>
        </table>

    </div>
</div>